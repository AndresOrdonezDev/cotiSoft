{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target": "esnext",
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"] 
}