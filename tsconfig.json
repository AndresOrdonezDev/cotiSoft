{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,        // ← AÑADE ESTA LÍNEA
    "emitDecoratorMetadata": true          // ← AÑADE ESTA LÍNEA
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}